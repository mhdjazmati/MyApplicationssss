<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:layoutAnimation="@anim/layout_bottom_to_top_slide"
              android:paddingTop="25dp"
              android:paddingBottom="25dp"
              android:background="@android:color/white"
              tools:context="querytest.test.samer.myapplicationssss.MySettingsActivity"
              android:orientation="vertical">


    <TextView
        android:layout_gravity="right"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="إعدادات عامة :"
        android:id="@+id/text1"
        android:textColor="@android:color/black"
        />

    <com.dd.processbutton.FlatButton
        android:onClick="changeCoverPic_Clicked"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:paddingBottom="20dp"
        android:gravity="right|center"
        android:text="غير الصورة الشخصية"
        android:textColor="@android:color/white"
        android:id="@+id/button2"/>

    <CheckBox
        android:id="@+id/auto_sigh_in"
        android:text="تسجيل دخول تلقائي"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ضبط وقت إشعار التذكير :  "
        android:id="@+id/textView7"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:layout_gravity="right"/>

    <TimePicker
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:padding="10dp"/>
</LinearLayout>

